#1
while True:
    letter = input("Введите письмо")
    if len(letter) < 25:
        print("В письме меньше 25 символов")
        break
    else:
        print("Письмо отправлено")

#2
print("Введите exit для выхода")
while True:
    move = input()
    if move == "w":
        print("Персонаж идет прямо")
    elif move == "a":
        print("Персонаж идет налево")
    elif move == "s":
        print("Персонаж идет назад")
    elif move == "d":
        print("Персонаж идет направо")
    elif move == "exit":
        print("Игра закончена")
        break
    else:
        print("Такого варнта нет")

